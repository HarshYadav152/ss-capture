{
  "name": "ss-capture",
  "version": "1.2.0",
  "description": "A modern, high-quality full-page screenshot extension with beautiful glassmorphic interface",
  "main": "background.js",
  "scripts": {
    "dev": "npm run build:dev && npm run watch",
    "build": "npm run build:all",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:edge",
    "build:dev": "node scripts/build.js --env development",
    "build:chrome": "node scripts/build.js --browser chrome --env production",
    "build:firefox": "node scripts/build.js --browser firefox --env production",
    "build:edge": "node scripts/build.js --browser edge --env production",
    "watch": "node scripts/watch.js",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.html",
    "lint:fix": "eslint src/ --ext .js,.html --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist/",
    "zip": "node scripts/zip.js",
    "release": "npm run build && npm run zip",
    "docs": "node scripts/generate-docs.js",
    "validate": "node scripts/validate.js",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [
    "screenshot",
    "full-page",
    "browser-extension",
    "chrome-extension",
    "firefox-addon",
    "edge-extension",
    "glassmorphism",
    "modern-ui",
    "web-capture",
    "page-screenshot"
  ],
  "author": {
    "name": "Harsh Yadav",
    "email": "HarshYadav152@outlook.com",
    "url": "https://github.com/HarshYadav152/ss-capture"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarshYadav152/ss-capture.git"
  },
  "bugs": {
    "url": "https://github.com/HarshYadav152/ss-capture/issues"
  },
  "homepage": "https://github.com/HarshYadav152/ss-capture#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "archiver": "^6.0.1",
    "chalk": "^4.1.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  },
  "browserslist": [
    "Chrome >= 88",
    "Firefox >= 109",
    "Edge >= 88"
  ],
  "manifest": {
    "version": 3,
    "permissions": [
      "activeTab",
      "scripting",
      "downloads"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  },
  "files": [
    "manifest.json",
    "popup.html",
    "popup.js",
    "content.js",
    "background.js",
    "icons/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/HarshYadav152"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
